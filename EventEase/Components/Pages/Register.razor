@page "/register"
@using System.ComponentModel.DataAnnotations
@using EventBase.Services
@inject UserSessionService Session
@inject EventBase.Services.IUserStoreService UserStore

<PageTitle>Register</PageTitle>

<h1>Register</h1>

<EditForm Model="Model" OnValidSubmit="HandleValidSubmit" FormName="registerForm">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label class="form-label">Full name</label>
        <InputText class="form-control" @bind-Value="Model.FullName" />
        <ValidationMessage For="() => Model.FullName" />
    </div>

    <div class="mb-3">
        <label class="form-label">Email</label>
        <InputText class="form-control" @bind-Value="Model.Email" />
        <ValidationMessage For="() => Model.Email" />
    </div>

    <div class="mb-3">
        <label class="form-label">Password</label>
        <InputText type="password" class="form-control" @bind-Value="Model.Password" />
        <ValidationMessage For="() => Model.Password" />
    </div>

    <button class="btn btn-primary" type="submit">Register</button>
</EditForm>

@if (Session.IsLoggedIn)
{
    <div class="alert alert-success mt-3">Welcome, @Session.UserFullName</div>
}

@code {
    [SupplyParameterFromForm]
    private RegisterModel Model { get; set; } = new RegisterModel();

    private async Task HandleValidSubmit()
    {
        // Basic password hashing (demo only)
        var hash = HashPassword(Model.Password);
        var user = new EventBase.Shared.RegisteredUser { FullName = Model.FullName, Email = Model.Email, PasswordHash = hash };
        var ok = await UserStore.AddUserAsync(user);
        if (ok)
        {
            Session.SetUser(Model.FullName, Model.Email);
        }
        else
        {
            // email already registered - simple feedback
        }
    }

    private static string HashPassword(string pwd)
    {
        if (string.IsNullOrEmpty(pwd)) return string.Empty;
        using var sha = System.Security.Cryptography.SHA256.Create();
        var bytes = System.Text.Encoding.UTF8.GetBytes(pwd);
        var hash = sha.ComputeHash(bytes);
        return System.Convert.ToBase64String(hash);
    }
}
